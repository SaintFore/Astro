---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { pageTitle } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<div class="stark-bg">
			<div class="grid-overlay"></div>
			<div class="scan-lines"></div>
		</div>
		
		<div class="page-container">
			<Header />
			<main class="main-content">
				<div class="page-header">
					<h1 class="page-title">{pageTitle}</h1>
					<div class="title-line"></div>
				</div>
				<div class="content-wrapper">
					<slot />
				</div>
			</main>
			<Footer/>
		</div>
		
		<script>
			import "../scripts/menu.js";
		</script>
		
		<style>
			/* 冷峻美学背景 */
			.stark-bg {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: -1;
				background: 
					radial-gradient(circle at 30% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 40%),
					radial-gradient(circle at 70% 80%, rgba(147, 197, 253, 0.05) 0%, transparent 40%),
					linear-gradient(180deg, #0f172a 0%, #1e293b 35%, #334155 100%);
			}

			.grid-overlay {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-image: 
					linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px),
					linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px);
				background-size: 40px 40px;
				animation: gridPulse 4s ease-in-out infinite;
			}

			.scan-lines {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(
					transparent 50%,
					rgba(59, 130, 246, 0.03) 50%
				);
				background-size: 100% 4px;
				animation: scanMove 2s linear infinite;
			}

			/* 页面容器 */
			.page-container {
				position: relative;
				z-index: 1;
				min-height: 100vh;
				background: rgba(15, 23, 42, 0.4);
				backdrop-filter: blur(20px);
				border: 1px solid rgba(59, 130, 246, 0.2);
				box-shadow: 
					0 0 50px rgba(59, 130, 246, 0.1),
					inset 0 1px 0 rgba(59, 130, 246, 0.1);
			}

			.main-content {
				padding: 2rem;
				max-width: 1200px;
				margin: 0 auto;
			}

			.page-header {
				text-align: center;
				margin-bottom: 3rem;
				position: relative;
			}

			.page-title {
				font-family: 'JetBrains Mono', monospace;
				font-size: clamp(2.5rem, 5vw, 4rem);
				font-weight: 600;
				color: #e2e8f0;
				margin: 1rem 0;
				text-shadow: 
					0 0 20px rgba(59, 130, 246, 0.5),
					0 0 40px rgba(59, 130, 246, 0.3);
				letter-spacing: -0.02em;
				position: relative;
			}

			.page-title::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(
					90deg,
					transparent,
					rgba(59, 130, 246, 0.1),
					transparent
				);
				animation: titleScan 3s ease-in-out infinite;
			}

			.title-line {
				width: 100px;
				height: 2px;
				background: linear-gradient(90deg, transparent, #3b82f6, transparent);
				margin: 1rem auto;
				position: relative;
				overflow: hidden;
			}

			.title-line::after {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, #60a5fa, transparent);
				animation: lineSweep 2s ease-in-out infinite;
			}

			.content-wrapper {
				background: rgba(15, 23, 42, 0.6);
				border: 1px solid rgba(59, 130, 246, 0.2);
				border-radius: 0;
				padding: 2rem;
				backdrop-filter: blur(10px);
				box-shadow: 
					0 0 30px rgba(59, 130, 246, 0.1),
					inset 0 1px 0 rgba(59, 130, 246, 0.1);
				position: relative;
				overflow: hidden;
			}

			.content-wrapper::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 1px;
				background: linear-gradient(90deg, transparent, #3b82f6, transparent);
			}

			.content-wrapper::after {
				content: '';
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				height: 1px;
				background: linear-gradient(90deg, transparent, #3b82f6, transparent);
			}

			/* 动画定义 */
			@keyframes gridPulse {
				0%, 100% { opacity: 0.3; }
				50% { opacity: 0.6; }
			}

			@keyframes scanMove {
				0% { transform: translateY(-100%); }
				100% { transform: translateY(100vh); }
			}

			@keyframes titleScan {
				0%, 100% { transform: translateX(-100%); opacity: 0; }
				50% { transform: translateX(100%); opacity: 1; }
			}

			@keyframes lineSweep {
				0% { left: -100%; }
				100% { left: 100%; }
			}

			/* 响应式设计 */
			@media (max-width: 768px) {
				.main-content {
					padding: 1rem;
				}
				
				.content-wrapper {
					padding: 1.5rem;
				}
				
				.grid-overlay {
					background-size: 20px 20px;
				}
			}

			/* 暗色模式优化 */
			:global(html.dark) .page-container {
				background: rgba(15, 23, 42, 0.8);
				border: 1px solid rgba(59, 130, 246, 0.3);
			}

			:global(html.dark) .content-wrapper {
				background: rgba(15, 23, 42, 0.9);
				border: 1px solid rgba(59, 130, 246, 0.3);
			}

			:global(html.dark) .page-title {
				color: #f1f5f9;
				text-shadow: 
					0 0 30px rgba(59, 130, 246, 0.7),
					0 0 60px rgba(59, 130, 246, 0.5);
			}
		</style>
	</body>
</html>
