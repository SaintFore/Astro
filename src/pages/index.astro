---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting.jsx";
import DailyInspiration from "../components/DailyInspiration.jsx";

const pageTitle = "Digital Archive";
const greetingMessages = [
	"Hello",
	"Welcome",
	"Greetings", 
	"Access Granted",
	"System Online",
	"Initialize",
	"Connected",
	"Ready",
	"Active"
];
---
<BaseLayout pageTitle={pageTitle}>
	<div class="matrix-container">
		<!-- 网格背景 -->
		<div class="grid-overlay"></div>
		
		<!-- 主标题区域 -->
		<section class="hero-section">
			<div class="title-block">
				<h1 class="main-title">DIGITAL_ARCHIVE</h1>
				<div class="subtitle">Personal Knowledge Base</div>
				<div class="status-bar">
					<span class="status-dot active"></span>
					<span class="status-text">SYSTEM_OPERATIONAL</span>
				</div>
			</div>
		</section>

		<!-- 组件区域 -->
		<section class="components-grid">
			<div class="component-wrapper">
				<div class="component-header">
					<span class="component-label">[GREETING_MODULE]</span>
					<span class="component-id">0x001</span>
				</div>
				<Greeting message={greetingMessages} client:load />
			</div>
			
			<div class="component-wrapper">
				<div class="component-header">
					<span class="component-label">[INSPIRATION_ENGINE]</span>
					<span class="component-id">0x002</span>
				</div>
				<DailyInspiration client:load />
			</div>
		</section>

		<!-- 数据流动效果 -->
		<div class="data-streams">
			<div class="stream stream-1"></div>
			<div class="stream stream-2"></div>
			<div class="stream stream-3"></div>
		</div>
	</div>

	<style>
		.matrix-container {
			min-height: 100vh;
			background: linear-gradient(180deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
			color: #e0e6ed;
			font-family: 'Courier New', 'Monaco', monospace;
			position: relative;
			overflow: hidden;
		}

		.grid-overlay {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background-image: 
				linear-gradient(rgba(0, 255, 255, 0.1) 1px, transparent 1px),
				linear-gradient(90deg, rgba(0, 255, 255, 0.1) 1px, transparent 1px);
			background-size: 50px 50px;
			pointer-events: none;
			z-index: 1;
		}

		.hero-section {
			padding: 4rem 2rem 2rem;
			position: relative;
			z-index: 10;
			text-align: center;
		}

		.title-block {
			border: 2px solid #00ffff;
			background: rgba(0, 0, 0, 0.8);
			padding: 2rem;
			margin: 0 auto;
			max-width: 600px;
			position: relative;
			backdrop-filter: blur(10px);
		}

		.title-block::before {
			content: '';
			position: absolute;
			top: -2px;
			left: -2px;
			right: -2px;
			bottom: -2px;
			background: linear-gradient(45deg, #00ffff, #0080ff, #00ffff);
			z-index: -1;
			border-radius: 2px;
		}

		.main-title {
			font-size: 3rem;
			font-weight: 700;
			color: #00ffff;
			margin: 0;
			letter-spacing: 4px;
			text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
			font-family: 'Courier New', monospace;
		}

		.subtitle {
			font-size: 1.2rem;
			color: #a0a0a0;
			margin: 1rem 0;
			letter-spacing: 2px;
			text-transform: uppercase;
		}

		.status-bar {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 10px;
			margin-top: 1.5rem;
			padding-top: 1rem;
			border-top: 1px solid rgba(0, 255, 255, 0.3);
		}

		.status-dot {
			width: 8px;
			height: 8px;
			border-radius: 50%;
			background: #ff4444;
		}

		.status-dot.active {
			background: #00ff00;
			box-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
			animation: pulse-green 2s infinite;
		}

		.status-text {
			font-size: 0.9rem;
			color: #00ff00;
			font-family: 'Courier New', monospace;
		}

		.components-grid {
			padding: 2rem;
			display: grid;
			gap: 3rem;
			max-width: 1200px;
			margin: 0 auto;
			position: relative;
			z-index: 10;
		}

		.component-wrapper {
			border: 1px solid rgba(0, 255, 255, 0.3);
			background: rgba(0, 0, 0, 0.6);
			backdrop-filter: blur(15px);
			transition: all 0.3s ease;
		}

		.component-wrapper:hover {
			border-color: #00ffff;
			box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
			transform: translateY(-5px);
		}

		.component-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 1rem 1.5rem;
			background: rgba(0, 255, 255, 0.1);
			border-bottom: 1px solid rgba(0, 255, 255, 0.3);
			font-family: 'Courier New', monospace;
		}

		.component-label {
			color: #00ffff;
			font-size: 0.9rem;
			font-weight: bold;
			letter-spacing: 1px;
		}

		.component-id {
			color: #888;
			font-size: 0.8rem;
		}

		.data-streams {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			pointer-events: none;
			z-index: 2;
		}

		.stream {
			position: absolute;
			width: 2px;
			height: 100px;
			background: linear-gradient(180deg, transparent, #00ffff, transparent);
			opacity: 0.6;
		}

		.stream-1 {
			left: 20%;
			animation: stream-flow 8s linear infinite;
		}

		.stream-2 {
			left: 60%;
			animation: stream-flow 12s linear infinite reverse;
			animation-delay: -3s;
		}

		.stream-3 {
			left: 80%;
			animation: stream-flow 10s linear infinite;
			animation-delay: -6s;
		}

		@keyframes pulse-green {
			0%, 100% { opacity: 1; }
			50% { opacity: 0.3; }
		}

		@keyframes stream-flow {
			0% { 
				top: -100px; 
				opacity: 0; 
			}
			10% { 
				opacity: 1; 
			}
			90% { 
				opacity: 1; 
			}
			100% { 
				top: 100vh; 
				opacity: 0; 
			}
		}

		/* 响应式设计 */
		@media (max-width: 768px) {
			.main-title {
				font-size: 2rem;
				letter-spacing: 2px;
			}
			
			.title-block {
				padding: 1.5rem;
				margin: 0 1rem;
			}
			
			.component-header {
				flex-direction: column;
				gap: 0.5rem;
				text-align: center;
			}
		}

		/* 重写组件样式以适应冷峻风格 */
		:global(.matrix-container [style*="background"]) {
			background: rgba(0, 0, 0, 0.8) !important;
			border: 1px solid rgba(0, 255, 255, 0.5) !important;
		}
	</style>
</BaseLayout>