---
import Social from "./Social.astro"
const myWebsite = "https://www.soleil.sbs"
const currentYear = new Date().getFullYear()
---

<footer class="stark-footer">
    <div class="footer-grid"></div>
    <div class="footer-content">
        <div class="footer-brand">
            <div class="footer-logo">◆ BLOG SYSTEM</div>
            <div class="footer-tagline">冷峻美学 · 数字时代</div>
        </div>
        
        <div class="footer-social">
            <Social platform="twitter" username="astrodotbuild" />
            <Social platform="github" username="withastro" />
            <Social platform="youtube" username="@astrodotbuild" />
        </div>
        
        <div class="footer-info">
            <p class="copyright">© {currentYear} BLOG SYSTEM</p>
            <p class="tech">POWERED BY <a href={myWebsite} target="_blank">ASTRO</a></p>
        </div>
    </div>
    <div class="footer-scan-line"></div>
</footer>

<style>
    .stark-footer {
        position: relative;
        margin-top: 4rem;
        padding: 3rem 0 2rem;
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(20px);
        border-top: 1px solid rgba(59, 130, 246, 0.3);
        overflow: hidden;
    }

    .footer-grid {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            linear-gradient(rgba(59, 130, 246, 0.05) 1px, transparent 1px),
            linear-gradient(90deg, rgba(59, 130, 246, 0.05) 1px, transparent 1px);
        background-size: 30px 30px;
        opacity: 0.5;
    }

    .footer-content {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        gap: 2rem;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }    .footer-logo {
        font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Microsoft YaHei Mono', '微软雅黑', monospace;
        font-size: 1.2rem;
        font-weight: 700;
        color: #e2e8f0;
        letter-spacing: 0.1em;
        text-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
    }    .footer-tagline {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', 'Source Han Sans SC', 'Noto Sans CJK SC', sans-serif;
        font-size: 0.8rem;
        color: #94a3b8;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    .footer-social {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .footer-info {
        text-align: right;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }    .copyright {
        font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Microsoft YaHei Mono', '微软雅黑', monospace;
        font-size: 0.8rem;
        color: #64748b;
        margin: 0;
        letter-spacing: 0.05em;
    }    .tech {
        font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Microsoft YaHei Mono', '微软雅黑', monospace;
        font-size: 0.7rem;
        color: #475569;
        margin: 0;
        letter-spacing: 0.1em;
    }

    .tech a {
        color: #3b82f6;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
    }

    .tech a:hover {
        color: #60a5fa;
        text-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
    }

    .tech a::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background: #3b82f6;
        transition: width 0.3s ease;
    }

    .tech a:hover::after {
        width: 100%;
    }

    .footer-scan-line {
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, #3b82f6, transparent);
        animation: footerScan 4s ease-in-out infinite;
    }

    /* 动画定义 */
    @keyframes footerScan {
        0% { 
            left: 0; 
            width: 0; 
        }
        50% { 
            left: 0; 
            width: 100%; 
        }
        100% { 
            left: 100%; 
            width: 0; 
        }
    }

    /* 响应式设计 */
    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }
        
        .footer-info {
            text-align: center;
        }
        
        .footer-logo {
            font-size: 1rem;
        }
    }

    /* 暗色模式优化 */
    :global(html.dark) .stark-footer {
        background: rgba(15, 23, 42, 0.98);
        border-top-color: rgba(59, 130, 246, 0.4);
    }

    :global(html.dark) .footer-logo {
        color: #f1f5f9;
        text-shadow: 0 0 15px rgba(59, 130, 246, 0.7);
    }

    :global(html.dark) .footer-tagline {
        color: #cbd5e1;
    }
</style>

