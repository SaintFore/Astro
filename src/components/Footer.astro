---
import Social from "./Social.astro"
const myWebsite = "https://www.soleil.sbs"
const currentYear = new Date().getFullYear()
---

<style>
    footer {
        position: relative;
        margin-top: 4rem;
        padding: 3rem 0 2rem;
        background: linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(30, 41, 59, 0.95) 100%);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(148, 163, 184, 0.1);
        overflow: hidden;
    }

    footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(79, 172, 254, 0.2) 0%, transparent 50%);
        pointer-events: none;
        z-index: -1;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        gap: 2rem;
    }

    .footer-brand {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .footer-logo {
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
    }

    .footer-tagline {
        color: rgba(203, 213, 225, 0.8);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .footer-info {
        text-align: right;
        color: rgba(203, 213, 225, 0.6);
        font-size: 0.85rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .footer-copy {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .heart {
        color: #f43f5e;
        animation: heartbeat 2s ease-in-out infinite;
    }

    .footer-links {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .footer-link {
        color: rgba(203, 213, 225, 0.6);
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        padding: 0.25rem 0;
    }

    .footer-link:hover {
        color: #667eea;
        transform: translateY(-2px);
    }

    .footer-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 1px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        transition: width 0.3s ease;
    }

    .footer-link:hover::after {
        width: 100%;
    }

    .floating-particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
    }

    .particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: rgba(103, 126, 234, 0.3);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

    .particle:nth-child(1) { left: 10%; animation-delay: 0s; }
    .particle:nth-child(2) { left: 20%; animation-delay: 1s; }
    .particle:nth-child(3) { left: 30%; animation-delay: 2s; }
    .particle:nth-child(4) { left: 40%; animation-delay: 3s; }
    .particle:nth-child(5) { left: 50%; animation-delay: 4s; }
    .particle:nth-child(6) { left: 60%; animation-delay: 5s; }
    .particle:nth-child(7) { left: 70%; animation-delay: 0.5s; }
    .particle:nth-child(8) { left: 80%; animation-delay: 1.5s; }
    .particle:nth-child(9) { left: 90%; animation-delay: 2.5s; }

    @keyframes heartbeat {
        0%, 50%, 100% { transform: scale(1); }
        25% { transform: scale(1.1); }
    }

    @keyframes float {
        0%, 100% { 
            transform: translateY(0px) rotate(0deg); 
            opacity: 0.7;
        }
        50% { 
            transform: translateY(-20px) rotate(180deg); 
            opacity: 1;
        }
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 2rem;
        }

        .footer-info {
            text-align: center;
        }

        .footer-links {
            justify-content: center;
        }
    }
</style>

<footer>
    <div class="floating-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>
    
    <div class="footer-content">
        <div class="footer-brand">
            <div class="footer-logo">世界之初</div>
            <div class="footer-tagline">
                探索技术的无限可能，<br>
                分享知识的珍贵时光
            </div>
        </div>

        <div class="social-links">
            <Social platform="github" username="SaintFore" />
            <Social platform="youtube" username="Augustus Saint" />
        </div>

        <div class="footer-info">
            <div class="footer-copy">
                <span>© {currentYear} Made with</span>
                <span class="heart">❤</span>
                <span>by SaintFore</span>
            </div>
            <div class="footer-links">
                <a href="/about" class="footer-link">关于</a>
                <a href="/blog" class="footer-link">博客</a>
                <a href={myWebsite} class="footer-link" target="_blank">官网</a>
            </div>
        </div>
    </div>
</footer>

