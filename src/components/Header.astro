---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
import ThemeIcon from "./ThemeIcon.astro";
import "../styles/global.css";
---

<header class="stark-header">
    <div class="header-grid"></div>
    <div class="header-content">
        <div class="logo-section">
            <div class="logo">
                <span class="logo-text">◆ BLOG</span>
                <div class="logo-pulse"></div>
            </div>
        </div>
        <nav class="main-nav">
            <div class="nav-controls">
                <ThemeIcon />
                <Hamburger />
            </div>
            <Navigation />
        </nav>
    </div>
    <div class="scan-line"></div>
</header>

<style>
.stark-header {
    position: relative;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(59, 130, 246, 0.3);
    box-shadow: 
        0 1px 0 rgba(59, 130, 246, 0.1),
        0 4px 20px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    margin-bottom: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.6, 1);
}

.stark-header:hover {
    border-bottom-color: rgba(59, 130, 246, 0.5);
    box-shadow: 
        0 1px 0 rgba(59, 130, 246, 0.2),
        0 4px 30px rgba(0, 0, 0, 0.4),
        0 0 20px rgba(59, 130, 246, 0.1);
}

.header-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
    opacity: 0.3;
}

.header-content {
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.logo-section {
    position: relative;
}

.logo {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.logo-text {
    font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Microsoft YaHei Mono', '微软雅黑', monospace;
    font-size: 1.25rem;
    font-weight: 700;
    color: #e2e8f0;
    letter-spacing: 0.1em;
    text-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
    position: relative;
}

.logo-text::before {
    content: '';
    position: absolute;
    top: 0;
    left: -10px;
    right: -10px;
    bottom: 0;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(59, 130, 246, 0.1),
        transparent
    );
    animation: logoScan 4s ease-in-out infinite;
}

.logo-pulse {
    position: absolute;
    left: -5px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: #3b82f6;
    border-radius: 50%;
    box-shadow: 0 0 10px #3b82f6;
    animation: pulse 2s ease-in-out infinite;
}

.main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.nav-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.scan-line {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #3b82f6, transparent);
    animation: scanLine 3s ease-in-out infinite;
}

/* 动画定义 */
@keyframes logoScan {
    0%, 100% { 
        transform: translateX(-100%); 
        opacity: 0; 
    }
    50% { 
        transform: translateX(100%); 
        opacity: 1; 
    }
}

@keyframes pulse {
    0%, 100% { 
        opacity: 1; 
        transform: translateY(-50%) scale(1); 
    }
    50% { 
        opacity: 0.3; 
        transform: translateY(-50%) scale(1.5); 
    }
}

@keyframes scanLine {
    0% { 
        left: 0; 
        width: 0; 
    }
    50% { 
        left: 0; 
        width: 100%; 
    }
    100% { 
        left: 100%; 
        width: 0; 
    }
}

/* 响应式设计 */
@media (max-width: 768px) {
    .header-content {
        padding: 1rem;
    }
    
    .main-nav {
        gap: 1rem;
    }
    
    .logo-text {
        font-size: 1rem;
    }
    
    .header-grid {
        background-size: 15px 15px;
    }
}

/* 暗色模式优化 */
:global(html.dark) .stark-header {
    background: rgba(15, 23, 42, 0.95);
    border-bottom-color: rgba(59, 130, 246, 0.4);
}

:global(html.dark) .logo-text {
    color: #f1f5f9;
    text-shadow: 0 0 15px rgba(59, 130, 246, 0.7);
}
</style>
